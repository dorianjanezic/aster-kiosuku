{
    "name": "aster-kiosuku-agent",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "description": "Grok/Gemini tool-using agent for Aster DEX perps (simulation first)",
    "engines": {
        "node": ">=20 <21",
        "pnpm": ">=9 <10"
    },
    "packageManager": "pnpm@9.15.9",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "simulate": "pnpm build && node dist/cli/simulate.js",
        "fetch:markets": "pnpm build && node dist/cli/fetchMarkets.js",
        "enrich:categories": "pnpm build && node dist/cli/enrichCategories.js",
        "compute:buckets": "pnpm build && node dist/cli/computeBuckets.js",
        "pairs:scan": "pnpm build && node dist/cli/pairsScan.js",
        "pairs:scan:tuned": "PAIRS_ALLOW_CROSS_CATEGORY=1 PAIRS_SIDE_CANDIDATES=50 PAIRS_PER_SECTOR=120 PAIRS_PAIRING_MODE=corr_first PAIRS_INTERVAL=1h PAIRS_LIMIT=1200 PAIRS_MIN_CORR=0.60 PAIRS_MAX_HALFLIFE_DAYS=40 PAIRS_FALLBACK_MAX_HALFLIFE_DAYS=40 PAIRS_MIN_SPREADZ=0.5 PAIRS_FALLBACK_MIN_SPREADZ=0.5 DEBUG=agent:pairs pnpm pairs:scan",
        "pairs:quick": "pnpm build && node dist/cli/quickEnterBestPair.js",
        "watch:quick": "pnpm build && node dist/cli/quickWatch.js",
        "reset:data": "node scripts/reset-data.cjs",
        "start": "pnpm reset:data && pnpm build && node dist/cli/fetchMarkets.js && node dist/cli/enrichCategories.js && node dist/cli/computeBuckets.js && node dist/main.js",
        "start:fresh": "pnpm start",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "lint": "echo 'lint configured later'",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "dev:dash": "pnpm --filter @aster/dashboard dev",
        "build:dash": "pnpm --filter @aster/dashboard build",
        "start:dash": "pnpm --filter @aster/dashboard start"
    },
    "dependencies": {
        "debug": "^4.3.7",
        "dotenv": "^16.4.5",
        "express": "^4.21.2",
        "better-sqlite3": "^9.6.0",
        "technicalindicators": "^3.1.0",
        "ws": "^8.18.3",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/express": "^4.17.21",
        "@types/better-sqlite3": "^7.6.9",
        "@types/node": "^22.7.4",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3"
    }
}